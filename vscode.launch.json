{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "args": ["${workspaceFolder}/test-api/src/main.ts"],
        "runtimeArgs": ["-r", "ts-node/register"],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}/test-api",
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "restart": true,
        "skipFiles": ["<node_internals>/**"],
        "envFile": "${workspaceFolder}/test-api/.env",
        "outFiles": ["${workspaceFolder}/test-api/dist/**/*.js"]
      }
    ]
  }
  